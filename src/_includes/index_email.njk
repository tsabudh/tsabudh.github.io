          viewBox="0 0 240 70">
          <defs>
            <!-- Filter that creates turbulence for distortion -->
            <filter id="wiggleFilter">
              <feTurbulence type="fractalNoise" baseFrequency="0.03" numOctaves="1" result="turb">
                <animate attributeName="seed" from="0" to="100" dur="1s" repeatCount="1" />
              </feTurbulence>
              <feDisplacementMap in="SourceGraphic" in2="noise" scale="100" xChannelSelector="R" yChannelSelector="G" />
            </filter>

            <!-- Mask using a filtered rect -->
            <mask id="distortedMask">
              <rect id="distorted-rect" x="-50%" y="-50%" rx="20" ry="20" width="300%" height="300%" fill="white"
                filter="url(#wiggleFilter)" />
            </mask>
          </defs>
          <g mask="url(#distortedMask)">
            <!-- Background rectangle -->
