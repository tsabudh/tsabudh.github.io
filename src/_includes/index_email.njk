<main class="px-6">
  <section class="py-96">
    <div class="flex items-center justify-center">
      <a
        id="index-email"
        href="mailto:tsabudh@gmail.com"
        class="relative inline-flex items-center gap-4 p-4  rounded-3xl hover:gap-8 hover:bg-white hover:text-amber-400 transition-all ease-in duration-1000"
      >
        <svg
          width="100%"
          height="100%"
          xmlns="http://www.w3.org/2000/svg"
          id="svg-with-mask"
          class="absolute inset-0"
        >
          <defs>
            <!-- Filter that creates turbulence for distortion -->
            <filter id="wiggleFilter">
              <feTurbulence
                type="fractalNoise"
                baseFrequency="0.03"
                numOctaves="1"
                result="turb"
              >
                <animate
                  attributeName="seed"
                  from="0"
                  to="100"
                  dur="1s"
                  repeatCount="1"
                />
              </feTurbulence>
              <feDisplacementMap
                in="SourceGraphic"
                in2="noise"
                scale="100"
                xChannelSelector="R"
                yChannelSelector="G"
              />
            </filter>

            <!-- Mask using a filtered rect -->
            <mask id="distortedMask">
              <rect
                id="distorted-rect"
                x="-50%"
                y="-50%"
                rx="20"
                ry="20"
                width="300%"
                height="300%"
                fill="white"
                filter="url(#wiggleFilter)"
              />
            </mask>
          </defs>
          <g mask="url(#distortedMask)">
            <!-- Background rectangle -->
            <rect
              x="0"
              y="0"
              rx="20"
              ry="20"
              width="100%"
              height="100%"
              class="fill-amber-400"
            />

            <!-- Centered text -->
            <text
              x="50%"
              y="50%"
              text-anchor="middle"
              dominant-baseline="middle"
              class="fill-white inline-flex items-center gap-4 p-4"
            >
              <tspan>tsabudh@gmail.com</tspan>
              <tspan class="text-3xl" dx="18" dy="2.5">&#x2192;</tspan>
            </text>
          </g>
